<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %>
<!-- Registration Form -->
<form action="/account/register" method="post">
    <input type="text" name="account_firstname" id="account_firstname" placeholder="First Name" required>
    <input type="text" name="account_lastname" id="account_lastname" placeholder="Last Name" required>
    <input type="email" name="account_email" id="account_email" placeholder="Email" required>
    <input type="password" name="account_password" id="account_password" placeholder="Password" required minlength="8" maxlength="64">
    <button type="submit">Register</button>
    <p>Already have an account? <a href="/account/login">Login</a></p>
</form>